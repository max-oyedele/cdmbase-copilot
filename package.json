{
  "name": "cdmbase-copilot",
  "displayName": "CDMBase team's AI Coding Assistant",
  "author": {
    "name": "Maxim Dymchenko",
    "email": "eastsea1020n@gmail.com"
  },
  "publisher": "max-oyedele",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/max-oyedele/cdmbase-copilot"
  },
  "gallery": {
    "icon": "cdmbase-copilot.png"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "cdmbase-copilot-view-container": [
        {
          "type": "webview",
          "id": "chatView",
          "name": "Chat"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "max.commentCode",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "max.reviewCode",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "max.codeRefactor",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "max.codeOptimize",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "max.explain",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "max.sendChatMessage",
          "group": "cdmbase-copilot"
        },
        {
          "command": "max.savePattern",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "max.readFromKnowledgeBase",
          "group": "cdmbase-copilot"
        },
        {
          "command": "max.generateCommitMessage",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "max.interviewMe",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "max.generateUnitTest",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "max.generateCodeChart",
          "group": "cdmbase-copilot"
        }
      ]
    },
    "commands": [
      {
        "command": "max.commentCode",
        "title": "CDMBase Copilot. Add comment to selected code."
      },
      {
        "command": "max.reviewCode",
        "title": "CDMBase Copilot. Review these selected code."
      },
      {
        "command": "max.codeRefactor",
        "title": "CDMBase Copilot. Refactor these selected code."
      },
      {
        "command": "max.codeOptimize",
        "title": "CDMBase Copilot. Optimize these selected code."
      },
      {
        "command": "max.sendChatMessage",
        "title": "Send to CDMBase Copilot"
      },
      {
        "command": "max.explain",
        "title": "CDMBase Copilot. Explain this code"
      },
      {
        "command": "max.savePattern",
        "title": "CDMBase Copilot. Save this code pattern"
      },
      {
        "command": "max.readFromKnowledgeBase",
        "title": "CDMBase Copilot. Generate based on knowledgeBase"
      },
      {
        "command": "max.generateCommitMessage",
        "title": "CDMBase Copilot. Generate commit message"
      },
      {
        "command": "max.interviewMe",
        "title": "CDMBase Copilot. Interview Me."
      },
      {
        "command": "max.generateUnitTest",
        "title": "CDMBase Copilot. Generate Unit Test."
      },
      {
        "command": "max.generateCodeChart",
        "title": "CDMBase Copilot. Generate Code Chart."
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cdmbase-copilot-view-container",
          "title": "CDMBase Copilot",
          "icon": "$(chat-editor-label-icon)"
        }
      ]
    },
    "configuration": [
      {
        "title": "CDMBase Copilot",
        "properties": {
          "google.gemini.apiKeys": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Enter your [API Key](https://aistudio.google.com/app/apikey) for Gemini."
          },
          "google.gemini.model": {
            "type": [
              "string",
              "null"
            ],
            "default": "gemini-1.5-flash",
            "markdownDescription": "Provide the name of the model you want to use. Choose from the [base models](https://ai.google.dev/models/gemini) or your own [tuned model](https://ai.google.dev/docs/model_tuning_guidance)."
          },
          "groq.llama3.apiKey": {
            "type": [
              "string",
              "null"
            ],
            "default": "llama-3.1-70b-versatile",
            "markdownDescription": "Enter your [API Key](https://console.groq.com/keys) Groq"
          },
          "groq.llama3.model": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Provide the name of the Groq model you want to use. Choose from the ..."
          },
          "anthropic.model": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Provide the name of the Anthropic model you want to use. Choose from the ..."
          },
          "anthropic.apiKey": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Enter your [API Key](https://docs.anthropic.com/en/docs/about-claude/models) Anthropic"
          },
          "font.family": {
            "type": "string",
            "enum": [
              "Montserrat",
              "SF Mono",
              "Space Mono",
              "Fira Code",
              "Source Code Pro",
              "JetBrains Mono",
              "Roboto Mono",
              "Ubuntu Mono",
              "IBM Plex Mono",
              "Inconsolata"
            ],
            "default": "JetBrains Mono",
            "description": "Select preffered font family"
          },
          "chatview.theme": {
            "type": "string",
            "enum": [
              "Atom One Dark",
              "Atom One Dark Reasonable",
              "Code Pen",
              "felipec",
              "github dark",
              "ir black",
              "night owl",
              "stackoverflow",
              "tokyo night"
            ],
            "default": "Atom One Dark",
            "description": "Select preffered chat view theme"
          },
          "chatview.font.size": {
            "type": [
              "string",
              "number"
            ],
            "default": 16,
            "description": "Enter your preferred font size (default is 16)"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "format": "prettier --write \"**/*.ts\""
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.2",
    "@copilotkit/react-core": "1.1.2",
    "@copilotkit/react-textarea": "1.1.2",
    "@copilotkit/react-ui": "1.1.2",
    "@copilotkit/runtime": "1.1.2",
    "@copilotkit/runtime-client-gql": "1.1.2",
    "@copilotkit/shared": "1.1.2",
    "@heroicons/react": "^2.1.3",
    "@langchain/anthropic": "^0.1.9",
    "@types/node-fetch": "^2.6.11",
    "clsx": "^2.1.0",
    "dotenv": "^16.1.4",
    "framer-motion": "^11.3.12",
    "langchain": "^0.1.19",
    "markdown-it": "^14.1.0",
    "next": "14.1.4",
    "node-fetch": "^3.3.2",
    "openai": "^4.32.1",
    "react": "^18",
    "react-dom": "^18",
    "react-spreadsheet": "^0.9.4",
    "readable-stream": "^4.5.2",
    "scheduler": "^0.23.0",
    "simple-git": "^3.25.0",
    "sinon": "^17.0.1",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/markdown-it": "^13.0.7",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/readable-stream": "^4.0.11",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.2",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.1.4",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
