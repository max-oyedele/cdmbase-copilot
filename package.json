{
  "name": "cdmbase-copilot",
  "displayName": "CDMBase team's AI Coding Assistant",
  "author": {
    "name": "Maxim Dymchenko",
    "email": "eastsea1020n@gmail.com"
  },
  "publisher": "max-oyedele",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/max-oyedele/cdmbase-copilot"
  },
  "gallery": {
    "icon": "cdmbase-copilot.png"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "cdmbase-copilot-view-container": [
        {
          "type": "webview",
          "id": "chatView",
          "name": "Chat"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "cdmbase-copilot.commentCode",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "cdmbase-copilot.reviewCode",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "cdmbase-copilot.codeRefactor",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "cdmbase-copilot.codeOptimize",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "cdmbase-copilot.explain",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "cdmbase-copilot.sendChatMessage",
          "group": "cdmbase-copilot"
        },
        {
          "command": "cdmbase-copilot.savePattern",
          "group": "cdmbase-copilot"
        },
        {
          "command": "cdmbase-copilot.generateCommitMessage",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "cdmbase-copilot.interviewMe",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "cdmbase-copilot.generateUnitTest",
          "group": "cdmbase-copilot"
        },
        {
          "when": "editorHasSelection",
          "command": "cdmbase-copilot.generateCodeChart",
          "group": "cdmbase-copilot"
        }
      ]
    },
    "commands": [
      {
        "command": "reacTree.start",
        "title": "ReacTree: Show Panel"
      },
      {
        "command": "reacTree.startStatusBar",
        "title": "ReacTree: Show StatusBar"
      },
      {
        "command": "cdmbase-copilot.commentCode",
        "title": "CDMBase Copilot. Add comment to selected code."
      },
      {
        "command": "cdmbase-copilot.reviewCode",
        "title": "CDMBase Copilot. Review these selected code."
      },
      {
        "command": "cdmbase-copilot.codeRefactor",
        "title": "CDMBase Copilot. Refactor these selected code."
      },
      {
        "command": "cdmbase-copilot.codeOptimize",
        "title": "CDMBase Copilot. Optimize these selected code."
      },
      {
        "command": "cdmbase-copilot.sendChatMessage",
        "title": "Send to CDMBase Copilot"
      },
      {
        "command": "cdmbase-copilot.explain",
        "title": "CDMBase Copilot. Explain this code"
      },
      {
        "command": "cdmbase-copilot.savePattern",
        "title": "CDMBase Copilot. Save this code pattern"
      },
      {
        "command": "cdmbase-copilot.generateCommitMessage",
        "title": "CDMBase Copilot. Generate commit message"
      },
      {
        "command": "cdmbase-copilot.interviewMe",
        "title": "CDMBase Copilot. Interview Me."
      },
      {
        "command": "cdmbase-copilot.generateUnitTest",
        "title": "CDMBase Copilot. Generate Unit Test."
      },
      {
        "command": "cdmbase-copilot.generateCodeChart",
        "title": "CDMBase Copilot. Generate Code Chart."
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cdmbase-copilot-view-container",
          "title": "CDMBase Copilot",
          "icon": "$(chat-editor-label-icon)"
        }
      ]
    },
    "configuration": [
      {
        "title": "CDMBase Copilot",
        "properties": {
          "anthropic.model": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Provide the name of the Anthropic model you want to use. Choose from the ..."
          },
          "anthropic.apiKey": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Enter your [API Key](https://docs.anthropic.com/en/docs/about-claude/models) Anthropic"
          },
          "font.family": {
            "type": "string",
            "enum": [
              "Montserrat",
              "SF Mono",
              "Space Mono",
              "Fira Code",
              "Source Code Pro",
              "JetBrains Mono",
              "Roboto Mono",
              "Ubuntu Mono",
              "IBM Plex Mono",
              "Inconsolata"
            ],
            "default": "JetBrains Mono",
            "description": "Select preffered font family"
          },
          "chatview.theme": {
            "type": "string",
            "enum": [
              "Atom One Dark",
              "Atom One Dark Reasonable",
              "Code Pen",
              "felipec",
              "github dark",
              "ir black",
              "night owl",
              "stackoverflow",
              "tokyo night"
            ],
            "default": "Atom One Dark",
            "description": "Select preffered chat view theme"
          },
          "chatview.font.size": {
            "type": [
              "string",
              "number"
            ],
            "default": 16,
            "description": "Enter your preferred font size (default is 16)"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production --config webpack.config.ts",
    "watch": "webpack --mode development --config webpack.config.ts --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "format": "prettier --write \"**/*.ts\""
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.21.1",
    "@copilotkit/react-core": "1.1.2",
    "@copilotkit/react-textarea": "1.1.2",
    "@copilotkit/react-ui": "1.1.2",
    "@copilotkit/runtime": "1.1.2",
    "@copilotkit/runtime-client-gql": "1.1.2",
    "@copilotkit/shared": "1.1.2",
    "@heroicons/react": "^2.1.3",
    "@langchain/anthropic": "^0.1.9",
    "@types/node-fetch": "^2.6.11",
    "babel-loader": "^9.1.2",
    "clsx": "^2.1.0",
    "css-loader": "^6.7.3",
    "dotenv": "^16.1.4",
    "framer-motion": "^11.3.12",
    "langchain": "^0.1.19",
    "markdown-it": "^14.1.0",
    "next": "14.1.4",
    "node-fetch": "^3.3.2",
    "openai": "^4.32.1",
    "react": "^18",
    "react-chatbot-kit": "2.2.2",
    "react-dom": "^18",
    "react-spinners": "0.14.1",
    "react-spreadsheet": "^0.9.4",
    "readable-stream": "^4.5.2",
    "scheduler": "^0.23.0",
    "simple-git": "^3.25.0",
    "sinon": "^17.0.1",
    "style-loader": "^3.3.1",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-react": "^7.18.6",
    "@types/babel__core": "^7.20.0",
    "@types/glob": "^8.1.0",
    "@types/markdown-it": "^13.0.7",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/readable-stream": "^4.0.11",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.2",
    "autoprefixer": "^10.0.1",
    "babel-loader": "^8.0.6",
    "eslint": "^8",
    "eslint-config-next": "14.1.4",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
